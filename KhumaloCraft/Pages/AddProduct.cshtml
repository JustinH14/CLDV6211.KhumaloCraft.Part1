@page
@model AddProductModel

<form method="post">
    <div>
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" />
    </div>
    <div>
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" type="number" step="0.01" />
    </div>
    <button type="submit">Add Product</button>
</form>